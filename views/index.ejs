<div class="container-fluid">
    <div class="row mt-5">
        
<% for (const pais of paises) {%>
    <% if(pais.abbreviation !== 'undefined'){ %>
        
            <div class="col-lg-2 mb-5">
                <a href="/country/<%=pais.abbreviation%>" style="text-decoration: none; color: black">
                    <div class="card me-3">
                        <div class="card-header d-flex flex-column justify-content-center align-items-center">
                            
                                <img src="https://www.countryflags.io/<%=pais.abbreviation%>/flat/64.png">
                            
                            <%- pais.name -%>
                        </div>
                        <div class="card-body">
                            <p>Confirmed: <%= pais.cases %></p>
                            <p>Deaths: <%= pais.deaths %></p>
                            <p>Population: <%= pais.population %></p>
                        </div>
                        <div class="card-footer">
                            <p>Updated: <%= pais.updated %></p>
                        </div>
                    </div>
                </a>
            </div> 
        
    <% } %> 
<% } %> 
        
    </div>
</div>
    
    
    



